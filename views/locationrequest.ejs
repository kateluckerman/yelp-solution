<%- include ('_header'); -%>

<script>
    var x = document.getElementById("demo");

    function getLocation() {
        var x = document.getElementById("demo");
    
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(nextPage);
        } else {
            x.innerHTML = "Geolocation is not supported by this browser.";
        }
    }

    function nextPage(position) {
        var latitude = position.coords.latitude;
        var longitude = position.coords.longitude;

        var location = 'lat:' + latitude + ', long:' + longitude;
        window.location.href = '/location/<%= term %>?location=' + location;
    }

</script>

<div class="question">
     <h1 style="font-family: 'Karla'; padding: 5px 5px;">Where would you like to search for <%= termName %>?</h1>
</div>

<div class="centerText">
    <button class="button" onclick="getLocation()">Use my location</button>
</div>

<p id="demo"></p>

<form method='GET' action="/location/<%= term %>">
        <div class="centerText" style="margin-top:60px; font-family:'Karla'">
            <div>
                <span>or enter a search location</span>
            </div>
            <div>
                <input style="width:50%; height:20px" autocomplete="off" type="text" id="location" name="location" />
            </div>
            <div>
                <input type="submit" value="enter" class="priceButton"/>
            </div>
        </div>
    </form>

<%- include ('_footer'); -%>
